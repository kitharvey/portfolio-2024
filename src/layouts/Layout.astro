---
import "@base.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta
      name="description"
      content="Kit Harvey is a front-end web developer specializing in creating high-quality, user-focused websites. Explore my portfolio to see my work."
    />
    <meta name="author" content="Kit Harvey" />
    <meta name="robots" content="index, follow" />
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <link rel="canonical" href="https://kitharvey.dev/" />

    <title>Kit Harvey | Front-End Web Developer</title>

    <!-- Schema Markup -->
    <script is:inline type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Person",
        "name": "Kit Harvey",
        "jobTitle": "Front-End Web Developer",
        "url": "https://kitharvey.dev/",
        "image": "https://kitharvey.dev/profile-image.jpg",
        "affiliation": {
          "@type": "Organization",
          "name": "Freelance"
        },
        "sameAs": [
          "https://github.com/kitharvey",
          "https://www.linkedin.com/in/kitharvey"
        ]
      }
    </script>

    <script is:inline type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Organization",
        "name": "Kit Harvey Portfolio",
        "url": "https://kitharvey.dev/",
        "logo": "https://kitharvey.dev/logo.svg",
        "contactPoint": {
          "@type": "ContactPoint",
          "telephone": "",
          "email": "kitharveycaubalejo@gmail.com",
          "contactType": "Customer Support",
          "areaServed": "Global",
          "availableLanguage": ["English"]
        },
        "sameAs": [
          "https://github.com/kitharvey",
          "https://www.linkedin.com/in/kitharvey"
        ]
      }
    </script>

    <script is:inline type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "WebSite",
        "name": "Kit Harvey Portfolio",
        "url": "https://kitharvey.dev/"
      }
    </script>

    <script is:inline type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "WebPage",
        "name": "Kit Harvey | Front-End Web Developer",
        "url": "https://kitharvey.dev/",
        "description": "Kit Harvey is a front-end web developer specializing in creating high-quality, user-focused websites. Explore my portfolio to see my work.",
        "datePublished": "2025-01-01",
        "mainEntity": {
          "@type": "Person",
          "name": "Kit Harvey"
        },
        "breadcrumb": {
          "@type": "BreadcrumbList",
          "itemListElement": [
            {
              "@type": "ListItem",
              "position": 1,
              "name": "Home",
              "item": "https://kitharvey.dev/"
            }
          ]
        }
      }
    </script>

    <!-- Open Graph Meta Tags -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://kitharvey.dev/" />
    <meta property="og:locale" content="en_US" />
    <meta property="og:site_name" content="Kit Harvey Portfolio" />
    <meta property="og:title" content="Kit Harvey | Front-End Web Developer" />
    <meta
      property="og:description"
      content="Kit Harvey is a front-end web developer specializing in creating high-quality, user-focused websites. Explore my portfolio to see my work."
    />
    <meta
      property="og:image"
      content="https://kitharvey.dev/profile-image.jpg"
    />

    <!-- Twitter Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@kitharveydotdev" />
    <meta name="twitter:creator" content="@kitharveydotdev" />
    <meta name="twitter:title" content="Kit Harvey | Front-End Web Developer" />
    <meta
      name="twitter:description"
      content="Kit Harvey is a front-end web developer specializing in creating high-quality, user-focused websites. Explore my portfolio to see my work."
    />
    <meta
      name="twitter:image"
      content="https://kitharvey.dev/profile-image.jpg"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Fira+Code&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="crt-overlay"></div>
    <div class="crt-glow"></div>
    <div class="crt-wrapper"></div>
    <div class="sm:px-0 px-4">
      <slot />
    </div>
  </body>
</html>
